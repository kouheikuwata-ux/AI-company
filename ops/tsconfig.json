{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": false,
    "moduleResolution": "node"
  },
  "include": [
    "check/**/*.ts",
    "report/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
